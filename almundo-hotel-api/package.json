{
  "name": "almundo-hotel-api",
  "version": "1.0.0",
  "description": "Almundo hotel API (back)",
  "license": "MIT",
  "email": "jorgeromen27@gmail.com",
  "author": {
    "email": "jorgeromen27@gmail.com",
    "name": "Jorge Romero",
    "url": "https://www.linkedin.com/in/jorge-luis-romero-casta%C3%B1eda-04791167/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/galiusgit/almundo-hotel.git"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "copy-resource": "ncp ./resource ./dist/almundo-hotel-api/resource",
    "clear-dist": "rimraf dist",
    "build": "npm run lint && npm run clear-dist && tsc --p tsconfig.json && npm run copy-resource",
    "deploy": "node dist/almundo-hotel-api/src/main.js",
    "deploy:dev": "nodemon",
    "deploy:debug": "nodemon --config nodemon-debug.json",
    "predeploy:prod": "rimraf dist && tsc",
    "deploy:prod": "node dist/almundo-hotel-api/src/main.js",
    "deploy:hmr": "node dist/almundo-hotel-api/src/main.hmr.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "@nestjs/swagger": "^2.2.0",
    "express": "^4.16.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "rimraf": "^2.6.2",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "typescript": "^2.8.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^6.0.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "^5.7.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
